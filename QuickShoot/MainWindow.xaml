<Window x:Class="QuickShoot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickShoot"
        mc:Ignorable="d"
        Title="MainWindow" Height="130" Width="130"
        WindowStyle="None"
        RenderOptions.BitmapScalingMode="LowQuality"
        RenderOptions.ClearTypeHint="Enabled"
        AllowsTransparency="True"
        Background="Transparent"
        Name="Main_Window"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="False">
    <Grid Name="grid_Base" Background="Transparent">
        <Grid Name="grid_Clear"  MouseUp="grid_Clear_MouseUp" MouseMove="grid_Clear_MouseMove" Margin="30,30,30,40" Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="40" Direction="270" ShadowDepth="5" Opacity=".6"></DropShadowEffect>
            </Grid.Effect>
        </Grid>
    </Grid>
</Window>
